<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/color_theme_dark_normal</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/color_theme_dark_selected</item>
    </style>

    <!-- indicator样式 -->
    <style name="StyleIndicators" parent="AppTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- 圆圈类型 -->
    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/color_theme_dark_normal</item>
        <item name="strokeColor">@color/color_theme_light_normal</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>

    <!-- 标签类型 -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!-- 数字键盘样式 -->
    <style name="style_number_button_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_number_button">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/number_btn_general</item>
    </style>

    <!-- icon imageView common style -->
    <style name="style_icon_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- title style -->
    <style name="style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- title button style -->
    <style name="style_title_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- tab style -->
    <style name="style_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_tab_general">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_tab_text" parent="style_tab_general">
        <item name="android:textColor">@color/color_text_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
