<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:color="@color/color_text_normal" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:color="@color/color_text_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />

    <!-- Focused states -->
    <item android:color="@color/color_text_normal" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:color="@color/color_text_selected" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />

    <!-- Pressed -->
    <item android:color="@color/color_text_selected" android:state_pressed="true" />

</selector> 